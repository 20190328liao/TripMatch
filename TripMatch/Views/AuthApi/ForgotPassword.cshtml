@{
    ViewData["Title"] = "忘記密碼";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="signContent">
    <h1 class="titleH1">忘記密碼</h1>

    <!-- 步驟指示器 -->
    <div class="step_indicators mb-5">
        <div class="step_item active" id="step1_indicator">
            <div class="step_badge"><i class="bi bi-check-lg"></i></div>
            <div class="step_label">驗證帳號</div>
        </div>
        <div class="step_item" id="step2_indicator">
            <div class="step_badge"><span class="step_number">2</span></div>
            <div class="step_label">重設密碼</div>
        </div>
        <div class="step_item" id="step3_indicator">
            <div class="step_badge"><span class="step_number">3</span></div>
            <div class="step_label">返回登入</div>
        </div>
    </div>

    <div class="formWrap">
        <!-- Step 1: 輸入 Email -->
        <div id="step1_content">
            <div class="text_start_align mx-auto" style="max-width: 450px;">
                <label class="fw-bold d-flex align-items-center gap-2 mb-3">
                    <i class="bi bi-person fs-3"></i> 輸入帳號
                </label>
                <div class="input_row">
                    <div class="input_group_custom">
                        <input id="email" class="input_custom" type="email" placeholder="example@gmail.com">
                    </div>
                    <button type="button" class="btn_send_verify" id="btnSendVerify" disabled>寄驗證信</button>
                </div>
                <div id="emailHint" class="inputHint mt-2"></div>
            </div>

            <div class="alert_custom mt-5 d-none" id="customAlert">
                <i class="bi bi-bell fs-4"></i>
                <div>
                    <strong>我們向您傳送了驗證信。</strong>
                    <br>
                    <small class="text-muted">請點擊信中的連結驗證您的帳號。</small>
                </div>
            </div>

            <button type="button" class="btn_next_step" id="btnNext" disabled>下一步</button>
        </div>

        <!-- Step 2: 重設密碼 -->
        <div id="step2_content" class="d-none">
            <div class="mx-auto" style="max-width: 320px;">
                <div class="mb-4 text_start_align">
                    <label class="fw-bold mb-3 d-block">
                        <i class="bi bi-lock me-2"></i>重設密碼
                    </label>
                    <div class="input_group_custom position-relative">
                        <input type="password" id="newPassword" class="input_custom" placeholder="6 到 18 位密碼和大小寫英文">
                        <i class="bi bi-eye-slash position-absolute end-0 me-3 btn-toggle-pwd" id="toggleNewPassword" style="cursor:pointer; top: 50%; transform: translateY(-50%);"></i>
                    </div>
                    <div id="pwdHint" class="inputHint mt-2"></div>
                </div>
                
                <div class="mb-4 text_start_align">
                    <label class="fw-bold mb-3 d-block">
                        <i class="bi bi-lock me-2"></i>確認密碼
                    </label>
                    <div class="input_group_custom position-relative">
                        <input type="password" id="confirmNewPassword" class="input_custom" placeholder="請重複輸入確認密碼">
                        <i class="bi bi-eye-slash position-absolute end-0 me-3 btn-toggle-pwd" id="toggleConfirmPassword" style="cursor:pointer; top: 50%; transform: translateY(-50%);"></i>
                    </div>
                    <div id="confirmHint" class="inputHint mt-2"></div>
                </div>

                <button type="button" class="btn_send_verify w-100 py-3" id="btnResetPassword" style="font-size: var(--font_H5);" disabled>返回登入</button>
            </div>
        </div>

        <!-- Step 3: 完成 -->
        <div id="step3_content" class="d-none text-center">
            <div class="mb-5">
                <div class="display-1 text-success mb-3">✓</div>
                <h3>密碼重設成功</h3>
                <p class="text-muted">您現在可以使用新密碼登入。</p>
            </div>
            <a href="@Url.Action("Login", "AuthApi")" class="btn_send_verify" style="display: inline-block; text-decoration: none;">
                返回登入
            </a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

@section Scripts {
    <script src="~/js/helper.js"></script>
    <script src="~/js/forgotPassword.js"></script>
    <script>
        // 切換密碼顯示/隱藏
        $(document).on("click", ".btn-toggle-pwd", function(e) {
            e.preventDefault();
            const inputId = $(this).attr("id") === "toggleNewPassword" ? "#newPassword" : "#confirmNewPassword";
            togglePasswordVisibility(inputId, this);
        });

        function togglePasswordVisibility(inputId, btn) {
            const input = $(inputId);
            const icon = $(btn);

            if (input.attr("type") === "password") {
                input.attr("type", "text");
                icon.removeClass("bi-eye-slash").addClass("bi-eye");
            } else {
                input.attr("type", "password");
                icon.removeClass("bi-eye").addClass("bi-eye-slash");
            }
        }
    </script>
}