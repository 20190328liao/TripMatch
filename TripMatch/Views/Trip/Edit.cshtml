@using Microsoft.Extensions.Configuration
@using System.Security.Claims
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "編輯行程";
    Layout = "~/Views/Shared/_Layout-copy.cshtml";
    var taggedUserId = ViewBag.TaggedUserId as int?;

    // 1. 嘗試取得 FullName (對應 ClaimTypes.GivenName)
    var fullName = User.FindFirstValue(ClaimTypes.GivenName);

    // 2. 嘗試取得 UserName (對應 ClaimTypes.Name)
    var userName = User.Identity?.Name;

    // 3. 嘗試取得 Email
    var email = User.FindFirstValue(ClaimTypes.Email);

    // 4. 嘗試取得頭像圖案
    var avatarUrl = User.FindFirst("Avatar")?.Value;
    if (string.IsNullOrEmpty(avatarUrl))
    {
        avatarUrl = Url.Content("~/img/default_avatar.png");
    }

    // 4. 決定顯示名稱的優先順序
    string displayName = "使用者";

    if (!string.IsNullOrWhiteSpace(fullName))
    {
        displayName = fullName;
    }
    else if (!string.IsNullOrWhiteSpace(userName))
    {
        if (userName.Contains("@"))
        {
            displayName = userName.Split('@')[0];
        }
        else
        {
            displayName = userName;
        }
    }
    else if (!string.IsNullOrWhiteSpace(email))
    {
        displayName = email.Split('@')[0];
    }
}

@model int


@* 1. 頁面專屬 CSS 區塊 *@
@section Styles {
    <link rel="stylesheet" href="~/css/trip/editTrip.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

<div class="itinerary-wrapper" data-trip-id="@Model" data-display-name="@displayName" data-avatar-url="@avatarUrl">
    <div class="left-panel">
        <input type="hidden" id="current-trip-id" value="@Model" />

        <div class="itinerary-nav-container">
            <div class="segmented-control">

                <div class="dropdown seg-dropdown">
                    <button class="seg-item dropdown-toggle" id="dayJumpBtn" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                        <i class="bi bi-calendar3"></i>
                        <span>快速跳轉</span>

                    </button>
                    <ul class="dropdown-menu shadow border-0 mt-2" id="day-jump-list">
                        <li><a class="dropdown-item active" href="#">Day 1</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-primary" href="#" id="btn-add-day-nav"><i class="bi bi-plus-circle me-1"></i>新增天數</a></li>
                    </ul>
                </div>

                <button class="seg-item active" id="tab-itinerary" onclick="switchTab('itinerary')">
                    <i class="bi bi-list-task"></i>
                    <span>行程細節</span>
                </button>

                <button class="seg-item" id="tab-explore" onclick="switchTab('explore')">
                    <i class="bi bi-compass"></i>
                    <span>熱門景點</span>
                </button>

                <button class="seg-item" id="tab-favorites" onclick="switchTab('favorites')">
                    <i class="bi bi-heart"></i>
                    <span>願望清單</span>
                </button>

            </div>
        </div>


        <div class="tab-content-wrapper">
            <div id="itinerary-tab-content" class="itinerary-content tab-content-active">
                <div id="place-list" class="p-0">
                </div>
            </div>

            <div id="explore-tab-content" class="itinerary-content" style="display: none;">
                <div class="text-center p-5 text-muted">點擊上方按鈕開始探索</div>
            </div>

            <div id="favorites-tab-content" class="itinerary-content" style="display: none;">
                <div class="text-center p-5 text-muted">載入收藏中...</div>
            </div>
        </div>
    </div>

    <div class="right-panel">

        @* 景點搜尋框 *@
        <div class="search-container shadow-sm">
            <div class="input-group search-box">
                <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>

                <input type="text" id="place-search-input" class="form-control border-start-0 ps-0" placeholder="搜尋景點..." />
            </div>
        </div>

        @* Google地圖 *@
        <div id="map"></div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/trip/editTrip.js" asp-append-version="true"></script>

    <!-- 使用官方 loader，透過 Razor 注入 Key-->
    <script src="https://maps.googleapis.com/maps/api/js?key=@Configuration["GoogleMaps:ApiKey"]&libraries=places"></script>
}

