@{
    ViewData["Title"] = "建立新行程";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* 1. 頁面專屬 CSS 區塊 *@
@section Styles {
    <link rel="stylesheet" href="~/css/trip/createTrip.css" />
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6">

            <div class="card border-0 shadow-sm p-4 p-md-5 bg-white rounded-3">
                <h2 class="mb-4 fw-bold">建立行程</h2>

                <form asp-controller="Home" asp-action="EditTrip" method="post">
                    <div class="mb-4">
                        <label class="form-label text-danger-emphasis small">* 行程名稱</label>
                        <input type="text" class="form-control form-control-lg" placeholder="東京大阪10日遊">
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-danger-emphasis small">* 目的地</label>
                        <div class="form-control d-flex flex-wrap gap-2 align-items-center">
                            <span class="badge bg-light text-dark border p-2">東京 ✕</span>
                            <span class="badge bg-light text-dark border p-2">大阪 ✕</span>
                            <input type="text" class="border-0 flex-grow-1" style="outline:none;" placeholder="輸入後按 Enter">
                        </div>
                    </div>

                    <div class="mb-5">
                        <label class="form-label text-danger-emphasis small">* 日期</label>
                        <div class="d-flex align-items-center gap-2">
                            <input type="date" class="form-control" value="2026-01-01">
                            <span>~</span>
                            <input type="date" class="form-control" value="2026-01-10">
                        </div>
                    </div>

                    <div class="d-flex justify-content-end align-items-center gap-3">     
                        <a asp-controller="Home" asp-action="MyTrip" class="btn btn_dark">取消 </a>
                        <button type="submit" class="btn btn-primary px-5 py-2" style="background-color: #63D9AD; border: none;">完成</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/trip/createTrip.js"></script>
}