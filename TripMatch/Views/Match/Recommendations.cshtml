@using TripMatch.Models.DTOs.TimeWindow
@model RecommendationViewModel

@{
    ViewData["Title"] = "推薦方案";
    Layout = "~/Views/Shared/_Layout-copy.cshtml";
}

<style>
    /* --- 頁面專用樣式 --- */
    .recommendation-container {
        max-width: 900px;
        margin: 0 auto;
        padding-bottom: 80px;
    }

    /* 篩選卡片捲動容器 */
    .filter-scroll-container {
        display: flex;
        gap: 12px;
        overflow-x: auto;
        padding-bottom: 8px;
        scrollbar-width: thin; /* Firefox */
    }

        .filter-scroll-container::-webkit-scrollbar {
            height: 6px;
        }

        .filter-scroll-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .filter-scroll-container::-webkit-scrollbar-thumb {
            background: #ccc;
            border-radius: 4px;
        }

    /* 篩選卡片本體 */
    .filter-card {
        cursor: pointer;
        border: 2px solid #E2E8F0;
        border-radius: 12px;
        padding: 12px 16px;
        min-width: 160px;
        background: white;
        transition: all 0.2s;
        flex: 0 0 auto; /* 防止被擠壓 */
        position: relative;
    }

        .filter-card:hover {
            border-color: #CBD5E0;
            transform: translateY(-2px);
        }

        .filter-card.active {
            border-color: #155DFC;
            background-color: #EBF8FF;
            box-shadow: 0 4px 6px rgba(21, 93, 252, 0.15);
        }
            /* 讓 active 狀態有個小勾勾或其他標示 (選用) */
            .filter-card.active::after {
                content: '';
                position: absolute;
                top: -5px;
                right: -5px;
                width: 10px;
                height: 10px;
                background: #155DFC;
                border-radius: 50%;
                border: 2px solid white;
            }

    /* 方案卡片樣式 */
    .option-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        padding: 24px;
        margin-bottom: 24px;
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #f0f0f0;
    }

        .option-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.1);
        }

    /* 狀態與標籤小元件 */
    .status-badge {
        background-color: #FEFCBF;
        color: #744210;
        padding: 6px 16px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .price-tag {
        background: #F0FFF4;
        color: #276749;
        padding: 8px 12px;
        border-radius: 8px;
        font-weight: 600;
        display: inline-block;
        font-size: 1.1rem;
    }

    .vote-badge {
        background-color: #FFFAF0;
        color: #C05621;
        border: 1px solid #FBD38D;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 5px;
    }
</style>

<div class="recommendation-container py-5">

    <div class="text-center mb-5">
        <h2 class="fw-bold mb-2">推薦方案</h2>
        <p class="text-muted">
            根據團隊時間和偏好，為您找到 <span id="displayCount" class="fw-bold text-dark">@Model.TotalOptionsCount</span> 個最佳組合
        </p>
        <div class="status-badge">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor"><path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" /></svg>
            全員投票決定最終方案
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4 p-4 rounded-4 bg-white">
        <div class="d-flex align-items-center mb-3">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#155DFC" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
            <h5 class="mb-0 fw-bold">選擇出發時間</h5>
        </div>

        @if (Model.TimeSlots.Count == 0)
        {
            <div class="alert alert-secondary text-center py-4">
                <h5 class="alert-heading">⚠️ 無共同時間</h5>
                <p class="mb-0">目前找不到大家都有空的時間段，請嘗試協調行事曆或放寬旅遊天數。</p>
            </div>
        }
        else
        {
            <div class="filter-scroll-container">
                <div class="filter-card active" onclick="filterTimeSlot('all', this)">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <small class="fw-bold text-dark">顯示全部</small>
                    </div>
                    <small class="text-muted d-block">所有區間</small>
                    <small class="text-primary fw-bold mt-2 d-block">
                        共 @Model.TotalOptionsCount 個方案
                    </small>
                </div>

                @foreach (var slot in Model.TimeSlots)
                {
                    <div class="filter-card" onclick="filterTimeSlot('@slot.Id', this)">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <small class="fw-bold text-dark">@slot.Label</small>
                            <span class="badge bg-light text-secondary border">@slot.Duration 天</span>
                        </div>
                        <small class="text-muted d-block">@slot.DateRange</small>
                        <small class="text-success fw-bold mt-2 d-block">
                            <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16"><path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" /></svg>
                            @slot.AvailableCount 人可參加
                        </small>
                    </div>
                }
            </div>
        }
    </div>

    <div id="cardsContainer">
        @if (Model.OptionCards.Count == 0)
        {
            <div class="text-center py-5 text-muted">
                <h4>沒有可顯示的方案</h4>
            </div>
        }

        @foreach (var card in Model.OptionCards)
        {
            <div class="option-card" data-timeslot="@card.TimeSlotId">
                <div class="row g-0">
                    <div class="col-md-8 pe-md-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex align-items-center">
                                <h3 class="fw-bold mb-0 me-3 text-dark">@card.PlaceName</h3>
                                <div class="vote-badge">
                                    <span id="vote-count-@card.RecommendationId">@card.CurrentVotes</span> 票
                                </div>
                            </div>
                        </div>

                        <div class="text-secondary mb-3 small">
                            <div class="mb-1 d-flex align-items-center">
                                <i class="bi bi-calendar3 me-2"></i> @card.DateRange
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-people-fill me-2"></i> @card.AvailableMembersCount 位成員有空
                            </div>
                        </div>

                        <div class="price-tag mb-3 mb-md-0">
                            <small class="opacity-75 me-1">預估費用</small>
                            NT$ @card.Price.ToString("N0")
                        </div>
                    </div>

                    <div class="col-md-4 d-flex flex-column justify-content-center gap-2 border-start ps-md-4">
                        @{
                            var btnClass = card.IsVotedByCurrentUser ? "btn-secondary" : "btn-primary";
                            var btnText = card.IsVotedByCurrentUser ? "已投票" : "投給這個行程";
                            var btnDisabled = card.IsVotedByCurrentUser ? "disabled" : "";
                        }

                        <button class="btn @btnClass btn-lg fw-bold w-100 shadow-sm"
                                id="btn-@card.RecommendationId"
                                @btnDisabled
                                onclick="submitVote('@card.RecommendationId')">
                            @btnText
                        </button>

                        <button class="btn btn-outline-secondary w-100" onclick="showDetailModal('@card.RecommendationId')">
                            查看詳情
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    // [功能 1] 前端篩選時間段
    function filterTimeSlot(slotId, element) {
        // 1. 切換按鈕 Active 樣式
        document.querySelectorAll('.filter-card').forEach(el => el.classList.remove('active'));
        element.classList.add('active');

        // 2. 篩選卡片 DOM
        const cards = document.querySelectorAll('.option-card');
        let visibleCount = 0;

        cards.forEach(card => {
            // 如果選 'all' 或者卡片的 data-timeslot 等於選中的 ID 就顯示
            if (slotId === 'all' || card.dataset.timeslot === slotId) {
                card.style.display = 'block';
                visibleCount++;
            } else {
                card.style.display = 'none';
            }
        });

        // 3. 更新顯示數量文字
        const countEl = document.getElementById('displayCount');
        if(countEl) countEl.innerText = visibleCount;
    }

    // [功能 2] 提交投票 (AJAX)
    // 注意：這裡假設後端有提供對應的 API，且 currentUserId 已經在後端抓取
    async function submitVote(recId) {
        const btn = document.getElementById('btn-' + recId);
        if(!btn) return;

        // UI 立即反饋 (Optimistic UI)
        const originalText = btn.innerText;
        btn.disabled = true;
        btn.innerText = "處理中...";

        try {
            // 呼叫後端 API (路徑請依據您的 TimeWindowApiController 設定)
            // 這裡傳送的是 List<int>，因為你的 API 定義是 [FromBody] List<int> recommendationIds
            const response = await fetch(`/api/timewindow/@Model.TripId/vote`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify([parseInt(recId)])
            });

            if (response.ok) {
                const data = await response.json();

                // 成功：更新按鈕狀態
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-secondary');
                btn.innerText = "已投票";

                // 更新票數 (假設後端回傳 updatedCounts Dictionary)
                if (data.updatedCounts && data.updatedCounts[recId]) {
                    const badge = document.getElementById('vote-count-' + recId);
                    if(badge) badge.innerText = data.updatedCounts[recId];
                } else {
                    // Fallback: 手動 +1
                    const badge = document.getElementById('vote-count-' + recId);
                    if(badge) badge.innerText = parseInt(badge.innerText) + 1;
                }

                alert("投票成功！");
            } else {
                const err = await response.json();
                alert("投票失敗：" + (err.message || "未知錯誤"));
                // 還原按鈕
                btn.disabled = false;
                btn.innerText = originalText;
            }
        } catch (error) {
            console.error(error);
            alert("連線錯誤，請稍後再試");
            btn.disabled = false;
            btn.innerText = originalText;
        }
    }

    // [功能 3] 查看詳情 (Placeholder)
    function showDetailModal(recId) {
        alert("即將顯示方案 ID: " + recId + " 的詳細行程資訊 (開發中)");
    }
</script>