@using TripMatch.Models.DTOs.TimeWindow
@model RecommendationViewModel

@{
    ViewData["Title"] = "推薦方案";
    Layout = "~/Views/Shared/_Layout-copy.cshtml";
}

<style>
    /* ... (保留原本的 CSS) ... */
    .recommendation-container {
        max-width: 900px;
        margin: 0 auto;
        padding-bottom: 80px;
    }

    .filter-scroll-container {
        display: flex;
        gap: 12px;
        overflow-x: auto;
        padding-bottom: 8px;
        scrollbar-width: thin;
    }

    .filter-card {
        cursor: pointer;
        border: 2px solid #E2E8F0;
        border-radius: 12px;
        padding: 12px 16px;
        min-width: 160px;
        background: white;
        transition: all 0.2s;
        flex: 0 0 auto;
        position: relative;
    }

        .filter-card:hover {
            border-color: #CBD5E0;
            transform: translateY(-2px);
        }

        .filter-card.active {
            border-color: #155DFC;
            background-color: #EBF8FF;
            box-shadow: 0 4px 6px rgba(21, 93, 252, 0.15);
        }

    .option-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        padding: 24px;
        margin-bottom: 24px;
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #f0f0f0;
    }

        .option-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.1);
        }

    .status-badge {
        background-color: #FEFCBF;
        color: #744210;
        padding: 6px 16px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .price-tag {
        background: #F0FFF4;
        color: #276749;
        padding: 8px 12px;
        border-radius: 8px;
        font-weight: 600;
        display: inline-block;
        font-size: 1.1rem;
    }

    .vote-badge {
        background-color: #FFFAF0;
        color: #C05621;
        border: 1px solid #FBD38D;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 16px;
        display: flex;
        align-items: center;
        gap: 16px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        border: 1px solid #E5E7EB;
        height: 100%;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        flex-shrink: 0;
    }

    .stat-info {
        flex-grow: 1;
    }

        .stat-info label {
            font-size: 13px;
            color: #6B7280;
            margin-bottom: 2px;
            font-weight: 500;
            display: block;
        }

    .stat-value {
        font-size: 20px;
        font-weight: 700;
        color: #111827;
        line-height: 1.2;
    }

    .bg-blue-100 {
        background-color: #DBEAFE;
    }

    .bg-green-100 {
        background-color: #DCFCE7;
    }

    .bg-yellow-100 {
        background-color: #FEF3C7;
    }
</style>

<div class="recommendation-container py-5">
    @if (Model.Summary != null && Model.Summary.MemberCount > 0)
    {
        <div class="stats-dashboard mb-4">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-icon bg-blue-100 text-primary"><i class="bi bi-cash-coin"></i></div>
                        <div class="stat-info">
                            <label>飯店預算 (中位數)</label>
                            <div class="stat-value">NT$ @Model.Summary.MedianHotelBudget.ToString("N0")</div>
                            <small class="text-muted">/ 每晚</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-icon bg-green-100 text-success"><i class="bi bi-airplane-engines"></i></div>
                        <div class="stat-info w-100">
                            <label class="d-flex justify-content-between">
                                <span>轉機接受度</span>
                                <span style="font-size:12px; color:#666">@Model.Summary.TransferAcceptCount 人接受 / @Model.Summary.TransferRejectCount 人拒絕</span>
                            </label>
                            <div class="progress mt-2" style="height: 8px;">
                                @{
                                    var acceptPercent = Model.Summary.MemberCount > 0 ? (Model.Summary.TransferAcceptCount * 100 / Model.Summary.MemberCount) : 0;
                                }
                                <div class="progress-bar bg-success" role="progressbar" style="width: @acceptPercent%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-icon bg-yellow-100 text-warning"><i class="bi bi-star-fill"></i></div>
                        <div class="stat-info">
                            <label>期望星級 (平均)</label>
                            <div class="stat-value">@Model.Summary.AvgHotelRating <span style="font-size:14px">★</span></div>
                            <small class="text-muted">綜合評分</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="text-center mb-5">
        <h2 class="fw-bold mb-2">推薦方案</h2>
        <p class="text-muted">根據團隊時間和偏好，為您找到 <span id="displayCount" class="fw-bold text-dark">@Model.TotalOptionsCount</span> 個最佳組合</p>
        <div class="status-badge">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor"><path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" /></svg>
            全員投票決定最終方案
        </div>
    </div>

    @if (Model.IsVoteCompleted && Model.WinningCard != null)
    {
        /* --- [狀態 A] 媒合成功 --- */
        <div class="winner-section text-center py-5 mb-4 bg-white rounded-4 shadow-sm border border-success">
            <div class="mb-3"><i class="bi bi-trophy-fill text-warning" style="font-size: 4rem;"></i></div>
            <h2 class="fw-bold text-success mb-2">媒合成功！</h2>
            <p class="text-muted mb-4">經過全員投票，這是大家最喜歡的行程：</p>

            <div class="card d-inline-block text-start shadow-lg border-0" style="max-width: 500px; width: 100%;">
                <div class="card-body p-4">
                    <h3 class="fw-bold">@Model.WinningCard.PlaceName</h3>
                    <div class="text-secondary mb-3"><i class="bi bi-calendar-check me-2"></i> @Model.WinningCard.DateRange</div>
                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-3">
                        <div class="text-center">
                            <small class="text-muted d-block">得票數</small>
                            <span class="fs-4 fw-bold text-primary">@Model.WinningCard.CurrentVotes</span>
                        </div>
                        <div class="vr"></div>
                        <div class="text-center">
                            <small class="text-muted d-block">預估費用</small>
                            <span class="fs-4 fw-bold text-dark">NT$ @Model.WinningCard.Price.ToString("N0")</span>
                        </div>
                    </div>
                    <button onclick="finalizeAndCreateTrip()" class="btn btn-success btn-lg w-100 fw-bold">
                        <i class="bi bi-airplane-engines-fill me-2"></i> 建立行程並開始規劃
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        /* --- [狀態 B] 投票進行中 --- */

        <div class="card border-0 shadow-sm mb-4 p-4 rounded-4 bg-white">
            <div class="d-flex align-items-center mb-3">
                <h5 class="mb-0 fw-bold">選擇出發時間</h5>
            </div>
            @if (Model.TimeSlots.Count == 0)
            {
                <div class="alert alert-secondary text-center py-4">
                    <h5 class="alert-heading">⚠️ 無共同時間</h5>
                    <p class="mb-0">目前找不到大家都有空的時間段。</p>
                </div>
            }
            else
            {
                <div class="filter-scroll-container">
                    <div class="filter-card active" onclick="filterTimeSlot('all', this)">
                        <div class="d-flex justify-content-between align-items-center mb-1"><small class="fw-bold text-dark">顯示全部</small></div>
                        <small class="text-primary fw-bold mt-2 d-block">共 @Model.TotalOptionsCount 個方案</small>
                    </div>
                    @foreach (var slot in Model.TimeSlots)
                    {
                        <div class="filter-card" onclick="filterTimeSlot('@slot.Id', this)">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="fw-bold text-dark">@slot.Label</small>
                                <span class="badge bg-light text-secondary border">@slot.Duration 天</span>
                            </div>
                            <small class="text-muted d-block">@slot.DateRange</small>
                            <small class="text-success fw-bold mt-2 d-block">@slot.AvailableCount 人可參加</small>
                        </div>
                    }
                </div>
            }
        </div>

        <div id="cardsContainer">
            @if (Model.OptionCards.Count == 0)
            {
                <div class="text-center py-5 text-muted"><h4>沒有可顯示的方案</h4></div>
            }
            @foreach (var card in Model.OptionCards)
            {
                <div class="option-card" data-timeslot="@card.TimeSlotId">
                    <div class="row g-0">
                        <div class="col-md-8 pe-md-4">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <div class="d-flex align-items-center">
                                    <h3 class="fw-bold mb-0 me-3 text-dark">@card.PlaceName</h3>
                                    <div class="vote-badge"><span id="vote-count-@card.RecommendationId">@card.CurrentVotes</span> 票</div>
                                </div>
                            </div>
                            <div class="text-secondary mb-3 small">
                                <div class="mb-1 d-flex align-items-center"><i class="bi bi-calendar3 me-2"></i> @card.DateRange</div>
                                <div class="d-flex align-items-center"><i class="bi bi-people-fill me-2"></i> @card.AvailableMembersCount 位成員有空</div>
                            </div>
                            <div class="price-tag mb-3 mb-md-0">
                                <small class="opacity-75 me-1">預估費用</small> NT$ @card.Price.ToString("N0")
                            </div>
                        </div>
                        <div class="col-md-4 d-flex flex-column justify-content-center gap-2 border-start ps-md-4">
                            <button class="btn btn-lg fw-bold w-100 shadow-sm @(card.IsVotedByCurrentUser ? "btn-primary" : "btn-outline-primary")"
                                    id="btn-select-@card.RecommendationId"
                                    onclick="toggleVoteSelection('@card.RecommendationId', this)">
                                @if (card.IsVotedByCurrentUser)
                                {
                                    <span><i class="bi bi-check-lg"></i> 已選</span>
                                }
                                else
                                {

                                    <span><i class="bi bi-hand-thumbs-up"></i> 投票</span>
                                }
                            </button>
                            <button class="btn btn-outline-secondary w-100 btn-view-details"
                                    data-location="@card.PlaceCode" data-start="@card.StartDate.ToString("yyyy-MM-dd")" data-end="@card.EndDate.ToString("yyyy-MM-dd")">
                                查看詳情
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div id="voteActionBar" class="fixed-bottom bg-white border-top p-3 shadow-lg" style="display: none; z-index: 1050;">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <span class="fw-bold fs-5">已選擇 <span id="selectedCount" class="text-primary display-6 fw-bold">0</span> 個方案</span>
                    <span class="text-muted ms-2 small">確認無誤後請送出</span>
                </div>
                <button onclick="submitAllVotes()" class="btn btn-primary btn-lg px-5 rounded-pill shadow">
                    確認送出投票 <i class="bi bi-send-fill ms-2"></i>
                </button>
            </div>
        </div>
    }
</div>

<style>
    body {
        padding-bottom: 120px;
    }
</style>

<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">行程預算詳情 (即時比價)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="loadingSpinner" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2">正在搜尋 Google Flights & Hotels 最新報價...</p>
                </div>
                <div id="realDataContent" class="d-none">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-primary text-white"><i class="bi bi-airplane"></i> 推薦航班 (TPE ⇌ <span id="destCode"></span>)</div>
                                <div class="card-body">
                                    <p><strong>去程：</strong> <span id="departInfo"></span></p>
                                    <p><strong>回程：</strong> <span id="returnInfo"></span></p>
                                    <h4 class="text-primary text-end" id="flightPrice"></h4>
                                    <a href="#" id="flightLink" target="_blank" class="btn btn-outline-primary w-100 mt-2">前往 Google Flights 訂票</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-warning">
                                <div class="card-header bg-warning text-dark"><i class="bi bi-building"></i> 推薦住宿</div>
                                <div class="card-body">
                                    <h5 class="card-title" id="hotelName"></h5>
                                    <p class="card-text text-muted">系統自動搜尋當地高評分飯店</p>
                                    <a href="#" id="hotelLink" target="_blank" class="btn btn-outline-warning w-100 mt-2 text-dark">前往 Google Hotels 訂房</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-success text-center">
                        <h4>預估總旅費：<span id="totalPrice"></span> TWD /人</h4>
                        <small class="text-muted">*此價格為即時查詢結果，實際金額以訂購頁面為準</small>
                    </div>
                </div>
                <div id="errorMsg" class="alert alert-danger d-none"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const initialVotes = @Html.Raw(Json.Serialize(Model.OptionCards.Where(c => c.IsVotedByCurrentUser).Select(c => c.RecommendationId)));
        let selectedRecIds = new Set(initialVotes);

        document.addEventListener("DOMContentLoaded", function() {
            updateActionBar();
        });

        function toggleVoteSelection(recId, btn) {
            const id = parseInt(recId);
            if (selectedRecIds.has(id)) {
                selectedRecIds.delete(id);
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-outline-primary');
                btn.innerHTML = '<i class="bi bi-hand-thumbs-up"></i> 投票';
            } else {
                selectedRecIds.add(id);
                btn.classList.remove('btn-outline-primary');
                btn.classList.add('btn-primary');
                btn.innerHTML = '<i class="bi bi-check-lg"></i> 已選';
            }
            updateActionBar();
        }

        function updateActionBar() {
            const bar = document.getElementById('voteActionBar');
            // ★ 安全檢查：如果 bar 不存在 (例如媒合成功畫面)，就直接結束
            if (!bar) return;

            const countSpan = document.getElementById('selectedCount');
            countSpan.innerText = selectedRecIds.size;

            if (selectedRecIds.size > 0) {
                bar.style.display = 'block';
            } else {
                bar.style.display = 'none';
            }
        }

        async function submitAllVotes() {
            if (!confirm("確定要送出這些選擇嗎？")) return;
            const payload = Array.from(selectedRecIds);
            try {
                const response = await fetch(`/api/timewindow/@Model.GroupId/vote-batch`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const data = await response.json();
                if (response.ok) {
                    alert("投票成功！");
                    location.reload();
                } else {
                    alert("錯誤：" + data.message);
                }
            } catch (e) {
                console.error(e);
                alert("系統連線錯誤");
            }
        }

        function filterTimeSlot(slotId, element) {
            document.querySelectorAll('.filter-card').forEach(el => el.classList.remove('active'));
            element.classList.add('active');
            const cards = document.querySelectorAll('.option-card');
            let visibleCount = 0;
            cards.forEach(card => {
                if (slotId === 'all' || card.dataset.timeslot === slotId) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            const countEl = document.getElementById('displayCount');
            if(countEl) countEl.innerText = visibleCount;
        }

        $(document).ready(function() {
            $('.btn-view-details').click(function() {
                var btn = $(this);
                var location = btn.data('location');
                var start = btn.data('start');
                var end = btn.data('end');

                $('#destCode').text(location);
                $('#loadingSpinner').removeClass('d-none');
                $('#realDataContent').addClass('d-none');
                $('#errorMsg').addClass('d-none');

                var modal = new bootstrap.Modal(document.getElementById('detailModal'));
                modal.show();

                $.ajax({
                    url: '/api/timewindow/check-price',
                    type: 'GET',
                    data: { location: location, start: start, end: end, groupId: @Model.GroupId },
                    success: function(res) {
                        var data = res.data;
                        $('#departInfo').text(data.departFlight);
                        $('#returnInfo').text(data.returnFlight);
                        $('#flightPrice').text('NT$ ' + formatCurrency(data.flightPrice));
                        $('#flightLink').attr('href', data.flightLink);
                        $('#hotelName').text(data.hotelName);
                        $('#hotelLink').attr('href', data.hotelLink);
                        $('#totalPrice').text(formatCurrency(data.totalPrice));
                        $('#loadingSpinner').addClass('d-none');
                        $('#realDataContent').removeClass('d-none');
                    },
                    error: function(err) {
                        $('#loadingSpinner').addClass('d-none');
                        $('#errorMsg').text('查詢失敗，請稍後再試').removeClass('d-none');
                    }
                });
            });

            function formatCurrency(num) {
                return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
        });

        async function finalizeAndCreateTrip() {
            const btn = document.querySelector('.winner-section button');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> 建立資料中...';

            try {
                const response = await fetch(`/api/timewindow/@Model.GroupId/finalize`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const data = await response.json();
                if (response.ok) {
                    window.location.href = data.redirectUrl;
                } else {
                    alert("建立失敗：" + data.message);
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            } catch (e) {
                console.error(e);
                alert("系統錯誤");
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }
document.addEventListener("DOMContentLoaded", function() {
    updateActionBar();
    
    // ★★★ 新增：頁面載入後，延遲 1 秒開始背景更新價格 ★★★
    setTimeout(autoUpdatePrices, 1000);
});

        async function autoUpdatePrices() {
                    const cards = document.querySelectorAll('.option-card');
                    const now = new Date();
                    const validHours = 1;   // ★ 設定門檻：1 小時內的資料視為「準確」，不重新查詢

                    for (const card of cards) {
                        const btn = card.querySelector('.btn-view-details');

                        // --- ★★★ 新增邏輯：檢查資料是否已經是新的 ★★★ ---
                        const updatedStr = btn.dataset.updated;

                        if (updatedStr) {
                            const lastUpdated = new Date(updatedStr);
                            // 計算時間差 (毫秒 -> 小時)
                            const diffHours = (now - lastUpdated) / (1000 * 60 * 60);

                            // 如果時間差小於設定時限 (例如 1 小時)，視為價格正確，直接跳過
                            if (diffHours < validHours) {
                                 continue;
                            }
                        }
                        // ----------------------------------------------------

                        // 準備查詢參數
                        const location = btn.dataset.location;
                        const start = btn.dataset.start;
                        const end = btn.dataset.end;

                        // 顯示 loading 狀態
                        const priceTag = card.querySelector('.price-tag');
                        const originalText = priceTag.innerHTML;
                        priceTag.innerHTML = '<span class="spinner-border spinner-border-sm"></span> 更新中...';

                        try {
                            // 呼叫後端 API
                            const response = await fetch(`/api/timewindow/check-price?groupId=@Model.GroupId&location=${location}&start=${start}&end=${end}`);
                            const res = await response.json();

                            if (res.success) {
                                // 更新 UI 顯示最新價格
                                priceTag.innerHTML = '<small class="opacity-75 me-1">最新報價</small> NT$ ' + formatCurrency(res.data.totalPrice);

                                // ★★★ 關鍵：查詢成功後，更新按鈕上的時間，避免使用者沒重整頁面時腳本重複查
                                btn.dataset.updated = new Date().toISOString();
                            } else {
                                // 失敗則恢復原狀
                                priceTag.innerHTML = originalText;
                            }
                        } catch (e) {
                            priceTag.innerHTML = originalText;
                        }

                        // 每查完一張，休息 2 秒再查下一張，避免 API 爆量
                        await new Promise(r => setTimeout(r, 2000));
                    }
                }

    </script>
}