@using Microsoft.AspNetCore.Identity
@using TripMatch.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TripMatch</title>
    <link rel="stylesheet" href="~/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/bootstrap.bundle.min.js" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    
    <script>
        // 在所有 script 前注入 CSRF token 與登入狀態
        window.csrfToken = '@Antiforgery.GetAndStoreTokens(Context).RequestToken';
        window.isAuthenticated = @(User?.Identity?.IsAuthenticated == true ? "true" : "false");
    </script>

    <link rel="shortcut icon" href="~/img/Logo/favicon.png" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/img/Logo/favicon.png" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
    <style>
        body {
            background-color: white;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        main { flex: 1; }
    </style>
</head>
<body>
    <header>
        @await Html.PartialAsync("_NavbarPartial")
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footerWrap">
        <div class="container text-center">
            &copy; 2025 - TripMatch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy & Terms</a>
        </div>
    </footer>

    <!-- 共用腳本，確保上方已注入 window.isAuthenticated -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navbar.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.7.1.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/helper.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/avatar.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/logout.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/inviteLoginTrip.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/auth-returnurl.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
