<!DOCTYPE html>
@using System.Text.Json
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    // 以 Url.Action 產生 server 路徑（MVC view），安全序列化給 client
    // 明確區分「頁面路由」（Auth）與「API 路由」（api/auth）
    var apiBase = Url.Content("~/api/auth");
    var authPages = new
    {
        Login = Url.Action("Login", "Auth"),
        Signup = Url.Action("Signup", "Auth"),
        CheckEmail = Url.Action("CheckEmail", "Auth"),
        ForgotPassword = Url.Action("ForgotPassword", "Auth"),
        MemberCenter = Url.Action("MemberCenter", "Auth"),
        ChangePassword = Url.Action("ChangePassword", "Auth")
    };

    // 與 helper.js 中 window.Routes.AuthApi 名稱一致的完整 API 路由清單
    var authApis = new
    {
        Signin = apiBase + "/Signin",
        Logout = apiBase + "/Logout",
        Register = apiBase + "/Register",
        SendConfirmation = apiBase + "/SendConfirmation",
        CheckDbStatus = apiBase + "/CheckDbStatus",
        SendPasswordReset = apiBase + "/SendPasswordReset",
        ValidatePasswordResetLink = apiBase + "/ValidatePasswordResetLink",
        PerformPasswordReset = apiBase + "/PerformPasswordReset",
        CheckPasswordResetSession = apiBase + "/CheckPasswordResetSession",
        SetPasswordResetSession = apiBase + "/SetPasswordResetSession",
        ClearPasswordResetSession = apiBase + "/ClearPasswordResetSession",
        GetMemberProfile = apiBase + "/GetMemberProfile",
        UploadAvatar = apiBase + "/UploadAvatar",
        ClearPendingSession = apiBase + "/ClearPendingSession",
        SaveLeaves = apiBase + "/SaveLeaves",
        DeleteLeaves = apiBase + "/DeleteLeaves",
        GetLeaves = apiBase + "/GetLeaves",
        GetLockedRanges = apiBase + "/GetLockedRanges",

        // wishlist endpoints（與 AuthApiController 中定義一致）
        GetWishlist = apiBase + "/Wishlist",
        ToggleWishlist = apiBase + "/Wishlist/Toggle",

        // for ForgotEmail flow
        SendBackupLookup = apiBase + "/SendBackupLookup",
        ConfirmBackupLookup = apiBase + "/ConfirmBackupLookup",
        GetBackupLookupResult = apiBase + "/GetBackupLookupResult"
    };

    // MemberCenterApi 的獨立 API 群組（可選：helper.js 也支援此群組）
    var memberCenterApis = new
    {
        Toggle = Url.Content("~/api/MemberCenterApi/Toggle"),
        GetWish = Url.Content("~/api/MemberCenterApi/GetWish"),
        TestFillImages = Url.Content("~/api/MemberCenterApi/TestFillImages"),
        SeedDummyWishlistForTrip = Url.Content("~/api/MemberCenterApi/SeedDummyWishlistForTrip"),
        GetWishlistCardsByUser = Url.Content("~/api/MemberCenterApi/GetWishlistCardsByUser")
    };

}

<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TripMatch</title>

    @* 與 _Layout-copy 保持一致的 CSS/JS 載入順序（確保 navbar 外觀一致） *@

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

  
    <link rel="stylesheet" href="~/css/AuthApi/AuthComponents.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AuthApi/AuthLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AuthApi/member.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AuthApi/User.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AuthApi/wishlist.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AuthApi/Calendar.css" asp-append-version="true" />
    @* Favicon 圖示 - 加上版本控制防止快取問題 *@
    <link rel="shortcut icon" href="~/img/Logo/favicon.png" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/img/Logo/favicon.png" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <style>
        body { min-height: 100vh; display:flex; flex-direction:column; }
        main { flex:1; }
        /* 避免 member.css 把 container 改為 inline-block 影響寬度與 navbar 位置 */
        .auth-page .container {
            display: block !important;
        }
    </style>
</head>

<body class="auth-page">
    <div id="route-data"
         data-pages='@Json.Serialize(authPages)'
         data-apis='@Json.Serialize(authApis)'
         data-member-center-apis='@Json.Serialize(memberCenterApis)'
         style="display:none;"></div>

    <header>
        @await Html.PartialAsync("_NavbarPartial")
    </header>
    
    <main class="main-content">
        @RenderBody()
    </main>

    @* 與 _Layout-copy 保持一致的腳本順序 *@
    <!-- 與 _Layout-copy 保持一致的腳本順序：把 jQuery 提前，避免依賴錯誤 -->
    <script src="~/js/jquery-3.7.1.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    

    <!-- 全站腳本（可在 site.js 使用 jQuery） -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- 顯示邀請回跳的 modal（只需載入一次） -->

    <!-- Navbar 與 Auth API 相關腳本（確保在 jQuery 之後） -->
    <script src="~/js/navbar.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/helper.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/avatar.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/logout.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/inviteLoginTrip.js" asp-append-version="true"></script>
    <script src="~/js/AuthApi/auth-returnurl.js" asp-append-version="true"></script>



    <script>
               // 讓 helper.js 可以把 CSRF token 放進 AJAX header
        window.csrfToken = '@Antiforgery.GetAndStoreTokens(Context).RequestToken';
        // 將伺服器端登入狀態傳到前端（布林或字串都接受）
        window.isAuthenticated = "@(User?.Identity?.IsAuthenticated == true ? "true" : "false")" === "true";
    </script>

    @RenderSection("Scripts", required: false)

    <footer class="footer">
        <div>
            &copy; 2025 - 想想 TripMatch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy & Terms</a>
        </div>
    </footer>
</body>
</html>