<!DOCTYPE html>
@using System.Text.Json
@{
    // 以 Url.Action 產生 server 路徑（MVC view），安全序列化給 client
    // 明確區分「頁面路由」（Auth）與「API 路由」（api/auth）
    var apiBase = Url.Content("~/api/auth");
    var authPages = new
    {
        Login = Url.Action("Login", "Auth"),
        Signup = Url.Action("Signup", "Auth"),
        CheckEmail = Url.Action("CheckEmail", "Auth"),
        ForgotPassword = Url.Action("ForgotPassword", "Auth"),
        MemberCenter = Url.Action("MemberCenter", "Auth"),
        ChangePassword = Url.Action("ChangePassword", "Auth")
    };
    var authApis = new
    {
        Login = apiBase + "/Login",
        Signup = apiBase + "/Register",
        CheckEmail = apiBase + "/CheckEmailStatus",
        ForgotPassword = apiBase + "/SendPasswordReset",
        MemberCenter = apiBase + "/GetMemberProfile",
        ChangePassword = apiBase + "/ChangePassword"

    };
}

<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TripMatch</title>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.7.1.js" asp-append-version="true"></script>
    @* 使用 ~/ 符號，Razor 會自動解析正確的根目錄路徑 *@
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/variables.css">
    <link rel="stylesheet" href="~/css/components.css">
    <link rel="stylesheet" href="~/css/layout.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <link rel="stylesheet" href="~/css/AuthApi/member.css">
    <link rel="stylesheet" href="~/css/AuthApi/Calendar.css">

    @* Favicon 圖示 - 加上版本控制防止快取問題 *@
    <link rel="shortcut icon" href="~/img/Logo/favicon.png" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/img/Logo/favicon.png" asp-append-version="true" />
    @* 這裡可以預留給各別頁面加入額外的 CSS *@
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    @* 在這裡放共用的 Header/Nav *@

    @* 這裡是各個頁面內容插入的位置 *@
    @RenderBody()

 
    <script src="~/js/AuthApi/helper.js" asp-append-version="true"></script>

    @* 頁面各自提供專屬腳本（由 view 的 @section Scripts 引入） *@
    @RenderSection("Scripts", required: false)
</body>
</html>